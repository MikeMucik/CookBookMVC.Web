@model CookBookMVC.Application.ViewModels.Recipe.RecipeDetailsVm

<div>
    <h2>@Model.Name</h2>
    <p>Kategoria: @Model.CategoryName</p>
    <p>Trudność: @Model.DifficultyName</p>
    <p>Czas przygotowania: @Model.TimeName</p>
    <p>Opis: @Model.Description</p>
    <h3>Składniki (@Model.AmountOfIngredients):</h3>
    @Html.Partial("_IngredientList", Model.Ingredients)
</div>
